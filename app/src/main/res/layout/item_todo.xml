<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
   >

    <View
        android:id="@+id/viewColoring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="5dp"
         android:layout_marginBottom="5dp"
         android:background="@color/white"
         android:paddingBottom="5dp"
         >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginEnd="5dp"
             android:clickable="true"
             android:padding="5dp"
             android:background="?android:attr/selectableItemBackground"

             >
             <TextView
                 android:id="@+id/txtShowTitle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentStart="true"
                 android:text="Task Title"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:textColor="#303030"
                 android:maxLines="1"
                 android:ellipsize="end"

                 />

             <TextView
                 android:id="@+id/txtShowTask"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/txtShowTitle"
                 android:layout_alignParentStart="true"
                 android:ellipsize="end"
                 android:maxLines="1"
                 android:text="Task Subtitle"
                 android:textColor="#303030"
                 android:textSize="15sp"
                 android:visibility="visible"
                 />
             <TextView
                 android:id="@+id/txtShowCategory"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:text="Category"
                 android:textSize="12sp"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:maxWidth="80dp"
                 android:textColor="@color/teal_200"
                 android:visibility="visible"
                 />
             <TextView
                 android:id="@+id/txtDate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/txtShowTask"
                 android:layout_marginTop="30dp"
                 android:text="Date"
                 android:textSize="12dp"
                 android:textColor="@color/teal_200"
                 android:visibility="visible"
                 />
             <TextView
                 android:id="@+id/txtdate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/txtDate"
                 android:text="01-02-2022"
                 android:textSize="12dp"
                 android:visibility="visible"
                 />

             <TextView
                 android:id="@+id/txtTime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:layout_alignRight="@+id/txtDate"
                 android:layout_marginTop="80dp"
                 android:text="Time"
                 android:textSize="12dp"
                 android:textColor="@color/teal_200"
                 android:visibility="visible"
                 />
             <TextView
                 android:id="@+id/txttime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/txtTime"
                 android:layout_alignParentEnd="true"
                 android:text="2:41AM"
                 android:textSize="12dp"
                 android:visibility="visible"
                 />







         </RelativeLayout>





     </RelativeLayout>



</com.google.android.material.card.MaterialCardView>